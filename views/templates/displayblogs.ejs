<%- include("header") %>

  <body>

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center ">
      <div class="container-fluid d-flex align-items-center justify-content-lg-between">
        <a href="/" class="logo me-auto me-lg-0"><img src="assets/img/logo.jpg" alt="" class="img-fluid"></a>
        <h1 class="logo me-auto me-lg-0"><a href="/">Alumni Tracking System</a></h1>

        <nav id="navbar" class="navbar order-last order-lg-0">
          <ul>
            <li><a class="nav-link scrollto" href="/alumni/getdata">Profile</a></li>
            <!-- <li><a class="nav-link scrollto " href="/alumni/fillalumni">Fill Form</a></li> -->
            <li><a class="nav-link scrollto " href="/alumni/viewalumni">Alumni</a></li>
            <li><a class="nav-link scrollto " href="/alumni/view-job">Job Postings</a></li>
            <li><a class="nav-link scrollto active" href="/alumni/displayblogs">Blogs</a></li>
            <li><a class="nav-link scrollto " href="/logout">Log Out</a></li>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->


      </div>
    </header><!-- End Header -->
    <section id="services" class="services">
      <div class="section-title">
        <section id="alumni" class="alumni section-bg">
          <div class="container" style="margin-bottom: -5rem;">
            <div class="section-title">
              <h2>Add a Blog</h2>
            </div>
          </div>
        </section>
        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-6">
            <form class="mt-4" method="POST" action="/alumni/addblog">
              <div class="form-floating mb-3">
                <input type="text" name="title" ngModel required class="form-control" placeholder="Username" />
                <label for="floatingInput">Title
                </label>
              </div>
              <div class="form-floating mb-3">
                <textarea name="desc" rows="5" cols="69" placeholder="content.."></textarea>
                <label for="floatingInput">
                </label>
              </div>
              <button type="submit" class="btn btn-secondary">Submit</button>
            </form>
          </div>
          <div class="col-sm-3"></div>
        </div>
      </div>

      <section id="alumni" class="alumni section-bg">

        <div class="section-title">
          <h2>Blogs</h2>
          <p> Let's read it! </p>
        </div>
      </section>
      <div class="container" style="margin-bottom: -5rem;"></div>
      <div class="container foreground">
        <article class="article-preview">
          <div class="row">
            <% for(let data of blogsData) { %>
              <div class="col-sm-11">
                <h2 class="post-title"><a href="#">
                    <%= data.title %>
                  </a></h2>
                <h3 class="post-subtitle" style="font-size: large; font-weight: bold;">Author: <%= data.name %>
                </h3>
                <div class="post-preview">
                  <p>
                    <%= data.desc %>
                  </p>
                </div>
                <div class="author">
                  <a>
                    <span class="author-name" style="font-size: large; color: rgb(194, 22, 137);">
                      <%= data.mail %>
                    </span>
                  </a>
                </div>
                <br />
              </div>
              <hr>
              <% } %>
          </div>
        </article>
      </div>
    </section>
    <!-- End alumni Section -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

      <div class="credits">
      </div>
      </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
        class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/purecounter/purecounter.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

  </body>

  </html>